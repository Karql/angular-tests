    "version": "0.2.0",
    "configurations": [
        {
            "name": "Jest Tests Current",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/@angular/cli/bin/ng",
            "args": [
                "test",
                "angular-tests",
                "--runInBand",
                "--test-file",
                "${fileBasename}"
            ],
            "outFiles": [
                "${workspaceRoot}/dist/**/*"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}